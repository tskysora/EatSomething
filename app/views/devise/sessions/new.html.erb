<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <h2 class="title">登入會員</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="field my-3">
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field my-3">
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field my-3 form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, "記住我", class: 'form-check-label' %>
        </div>
      <% end %>

      <%= f.hidden_field :invite_token, value: @group.invite_token if @group %>

      <div class="actions my-3">
        <%= f.submit "登入", class: 'btn btn-primary text-light' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>