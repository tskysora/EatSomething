<%= bootstrap_form_with model: group  do |form| %>
  <div class="row card-body">
    <div class="col-12">
      <%= form.text_field :name, class: 'form-control', autofocus: true, label: '團體名稱', required: true  %>
    </div>
    <div class="col-12 mt-3">
      <%= form.text_field :description, class: 'form-control', label: '描述' %>
    </div>
    <div class="my-3 d-flex justify-content-between">
      <%= form.submit class: 'btn btn-primary text-light' %>
      <%= link_to "移交管理權", manager_group_path(group), class: 'btn btn-outline-secondary' unless @group.new_record? %>
    </div>
  </div>
<% end %>

