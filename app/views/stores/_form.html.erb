<%= form_with model: store, data: "turbo: false" do |form| %>
  <div class="row">
    <div class="col-3 my-3">
      <%= form.label :name, '店名', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-3 my-3">
      <%= form.label :branch, '分店名稱', class: 'form-label' %>
      <%= form.text_field :branch, class: 'form-control' %>
    </div>
    <div class="col-6 my-3">
      <%= form.label :tel, '電話', class: 'form-label' %>
      <%= form.text_field :tel, class: 'form-control' %>
    </div>
    <div class="col-3 my-3">
      <%= form.label :city, '縣市', class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control' %>
    </div>
    <div class="col-3 my-3">
      <%= form.label :district, '鄉鎮市區', class: 'form-label' %>
      <%= form.text_field :district, class: 'form-control' %>
    </div>
    <div class="col-6 my-3">
      <%= form.label :street_address, '街道名稱', class: 'form-label' %>
      <%= form.text_field :street_address, class: 'form-control' %>
    </div>
    <div class="col-12 my-3">
      <%= form.label :note, '備註', class: 'form-label' %>
      <%= form.text_area :note, class: 'form-control', rows: 3 %>
    </div>
    <div class="col-12 my-3">
      <%= form.check_box :online, class: 'form-check-input' %>
      <%= form.label :online, '營業中', class: 'form-check-label' %>
    </div>
    <!-- <div>
      <%= form.label :opening, '營業時間', class: 'form-label' %>
    </div>
    <div class="col-4 input-group">
      <%= form.text_field :opening, class: 'form-control' %>
      <span class="input-group-text">-</span>
      <%= form.text_field :opening, class: 'form-control' %>
    </div> -->

    <div class="my-3">
      <%= form.submit class: 'btn btn-primary text-light' %>
    </div>
  </div>
<% end %>

